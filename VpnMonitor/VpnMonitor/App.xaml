<Application x:Class="VpnMonitor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:VpnMonitor"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <LinearGradientBrush x:Key="GradientBorderBrush" EndPoint="0.5,1" StartPoint="0,0">
            <GradientStop Color="Black" Offset="1"/>
            <GradientStop Color="White"/>
        </LinearGradientBrush>
        
        <RadialGradientBrush x:Key="RadialGreenBrush" GradientOrigin="0, 0">
            <GradientStop Color="LightGreen"/>
            <GradientStop Color="Green" Offset="0.904"/>
        </RadialGradientBrush>

        <RadialGradientBrush x:Key="RadialRedBrush" GradientOrigin="0, 0">
            <GradientStop Color="#FFF0B2BB"/>
            <GradientStop Color="#FFAA1A1A" Offset="0.904"/>
        </RadialGradientBrush>

        <RadialGradientBrush x:Key="DisabledRadialBrush" GradientOrigin="0, 0">
            <GradientStop Color="Gainsboro"/>
            <GradientStop Color="#FF494949" Offset="0.904"/>
        </RadialGradientBrush>
        
        <Style TargetType="TextBlock">
            <Style.Setters>
                <Setter Property="Margin" Value="2"></Setter>
            </Style.Setters>
        </Style>
    </Application.Resources>
</Application>
